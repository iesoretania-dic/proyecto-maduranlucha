{% extends 'layout.twig' %}

{% block title 'Solucion de la incidencia' %}

{% block contenido %}
    <div class="contenido">
        <form class="" action="" method="post">

            <div class="vistaFormulario">
                <ul class="list-group">
                    <li class="alert alert-info list-group-item list-group-item-secondary">Solucion de la incidencia: <span class="badge badge-primary">{{ idIncidencia }}</span></li>
                    {% for solucion in listaSolucion %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>{{ solucion }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="vistaFormulario">
                <a href="javascript:history.back()"><button class="btn btn-warning" type="button"><i class="fas fa-undo"></i> Volver</button></a>
            </div>

        </form>
    </div>
{% endblock %}


{% block usuario %}
    <span>Conectado como: {{ usuario }}</span>
{% endblock %}