{% extends 'layout.twig' %}

{% block title 'urgente' %}

{% block contenido %}
    <div class="contenido">
        <form class="" action="" method="post">

            <div class="vistaFormulario">

                {% if mensajeUrgente == 'No' %}
                    <label class="alert alert-warning">¿Desea marcar indicencia como urgente?</label>
                {% elseif mensajeUrgente == 'Si' %}
                    <label class="alert alert-warning">¿Desea reestrablecer la incidencia a su estado normal?</label>
                {% endif %}


                <div class="vistaFormulario">
                    <input class="btn btn-success" type="submit" value="Si" name="btnUrgente">
                    <a href="javascript:history.back()"><input class="btn btn-warning" type="button" value="Cancelar"></a>
                </div>

            </div>

        </form>
    </div>
{% endblock %}


{% block usuario %}
    <span>Conectado como: {{ usuario }}</span>
{% endblock %}