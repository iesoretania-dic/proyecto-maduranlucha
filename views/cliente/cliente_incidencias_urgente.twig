{% extends 'layout.twig' %}

{% block title 'urgente' %}

{% block contenido %}
    <div class="contenido">
        <form class="" action="" method="post">

            <div class="vistaFormulario">

                {% if mensajeUrgente == 'No' %}
                    <label class="alert alert-warning">¿Desea marcar incidencia como urgente?</label>
                {% elseif mensajeUrgente == 'Si' %}
                    <label class="alert alert-warning">¿Desea establecer la incidencia a su estado normal?</label>
                {% endif %}

                <div class="vistaFormulario">
                    <button class="btn btn-success" type="submit" name="btnUrgente"><i class="fas fa-check"></i> Si</button>
                    <a href="javascript:history.back()"><button class="btn btn-warning" type="button"><i class="fas fa-undo"></i> Volver</button></a>
                </div>

            </div>

        </form>
    </div>
{% endblock %}


{% block usuario %}
    <span>Conectado como: {{ usuario }}</span>
{% endblock %}