{% extends 'layout.twig' %}

{% block title 'Tecnico' %}

{% block contenido %}
    <div class="contenido">
        <form action="" method="post">

            {% if error %}
                <p class="label label-danger">El comentario es obligatorio</p>
            {% endif %}

            <div class=" miDiv">
                <p class="alert alert-info">AÃ±adir comentario*:</p>
                <textarea class="labelTecnico " name="comentario" id="comentario" cols="40" rows="5"></textarea>
            </div>

            <div class="vistaCheck">
                <div class="form-group miDiv">
                    <p class="alert alert-info">Disponible a partir de:</p>
                    <div class="input-group date form_datetime" data-date="" data-date-format="yyyy-mm-dd HH:ii p" data-link-field="dtp_input1">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-calendar-alt"></i></span>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        </div>
                        <input class="form-control" size="2" type="text" value="{{ disponible }}" readonly>
                    </div>
                    <input type="hidden" id="dtp_input1"  value="{{ disponible }}" name="pllamada" /><br/>
                </div>
            </div>

            <div class="miDiv">
                <p class="alert alert-info">(*) Campos obligatorios</p>
            </div>

            <div class="vistaCheck">
                <button class="btn btn-primary" type="submit" name="aceptarMoverPendiente"><i class="fas fa-check"></i> Aceptar</button>
                <button class="btn btn-warning" type="submit" name="cancelarMoverPendiente"><i class="fas fa-undo"></i> Volver</button>
            </div>
        </form>
    </div>


{% endblock %}

{% block usuario %}
    <span>Conectado como: {{ usuario }}</span>
{% endblock %}