{% extends 'layout.twig' %}

{% block title 'Confirmar' %}

{% block contenido %}
    <div class="contenido">
        <form class="formularioTecnicos" action="" method="post">

            <div class="vistaFormularioS">
                {% if mensajeComentario == 'error' %}
                    <p class="alert alert-danger">El comentario es obligatorio</p>
                {% endif %}
            </div>

            <div class="vistaFormularioS">
                <p class="alert alert-info" >Enviar a técnicos </p>
            </div>

            <div class="vistaFormularioS">
                <p type="text" class="badge badge-danger alerta" id="mensajeConfirmarTecnicos"></p>
            </div>

            <div class="vistaFormularioS">
                <label for=comentarioConfirmarTecnicos class="input-group-text">Añadir Comentario*:</label>
                <textarea class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="comentario" id="comentarioConfirmarTecnicos" cols="10" rows="5"></textarea>
            </div>
            {% if rol == '0' %}
                <div class="vistaFormularioS">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label for="tecnico" class="input-group-text" id="inputGroup-sizing-default">Técnico:</label>
                        </div>
                        <select class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="tecnico" id="tecnico">
                            <option value="">Seleccione un técnico: </option>
                            {% for tecnico in tecnicos %}
                                <option value="{{ tecnico.dni}}">{{ tecnico.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            {% endif %}

            <div class="form-group vistaFormularioS">
                <label class="input-group-text">Disponible a partir de:</label>
                <div class="input-group date form_datetime" data-date="" data-date-format="yyyy-mm-dd HH:ii p" data-link-field="dtp_input1">
                    <div class="input-group-prepend">
                        <span class="input-group-text miTextGroup" id="basic-addon1"><i class="fas fa-calendar-alt"></i></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                    <input class="form-control" size="2" type="text" value="{{ proLlamada }}" readonly>
                </div>
                <input type="hidden" id="dtp_input1" value="{{ proLlamada }}" name="llamada " /><br/>
            </div>
            <div class="vistaFormularioS">
                <p class="alert alert-info" >(*) Campos obligatorios </p>
            </div>

            <div class="vistaCheck">
                <button id="btnAceptarConfirmarTecnicos" class="btn btn-primary" type="submit" name="aceptarMoverTecnicos"><i class="fas fa-wrench"></i> Aceptar</button>
                <a href="javascript:history.back()"><button class="btn btn-warning" type="button"><i class="fas fa-undo"></i> Volver</button></a>
            </div>
        </form>
    </div>


{% endblock %}

 {% block usuario %}
     <span>Conectado como: {{ usuario }}</span>
 {% endblock %}